@{
}

@model List<CadastroEmpresa>

<h2>Empresas Registradas</h2>

<table class="table">
    <thead>
        <tr>
            <th>CNPJ</th>
            <th>Email</th>
            <th>Senha</th>
            <th>Razão Social</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>@company.CNPJ</td>
                <td>@company.EmailEmpresa</td>
                <td>@company.SenhaEmpresa</td>
                <td>@company.RazaoSocial</td>
                <td>
                    <a asp-controller="CadastroEmpresa" asp-action="Edit" class="btn btn-warning">Editar</a> 
                    <a asp-controller="CadastroEmpresa" asp-action="Delete" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="CadastroEmpresa" asp-action="Create" class="btn btn-warning">Nova Empresa</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar</a>
